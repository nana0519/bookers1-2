<div class="container">
  <div class="col-4">
    <h1>Editing Book</h1>
    <%= form_with model: @book, local: true do |f| %>
      <div class="form-group">
        <label>Title</label>
        <%= f.text_field:title, class:"form-control" %>
      </div>
      <div class="form-group">
        <label>Body</label>
        <%= f.text_area:body, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>